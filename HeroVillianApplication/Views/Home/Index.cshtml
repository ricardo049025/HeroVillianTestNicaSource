@model HeroVillianApplication.Models.SuperPerson

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="home col s12">
            <div class="upper-fold">
                <div class="row">
                    <div class="col l4 offset-l4 m4 offset-m4 s10 offset-s1" style="margin-top:120px">
                        <div class="card-panel white">
                            <div class="row">
                                <h5>Search your favorite super Heroe or Villane</h5>
                                <form class="search-box-form" >
                                    <div class="col m12">
                                        <div class="form-label">Name</div>
                                        <div class="input-field" id="where">
                                            <input class="browser-default" placeholder="Write Name" type="text" name="name" autocomplete="off">
                                        </div>
                                    </div>
                                    <div class="col m12 submit-btn center">
                                        <div class="input-field" id="submit-btn">
                                            <button class="btn waves-effect waves-light red accent-2"><i class="material-icons">search</i> <strong>Search</strong>  </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="container-fluid lower-fold">
    <div class="row">
        <div class="col s12">
            <div class="left-align">
                <h5>@ViewBag.Message</h5>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div>
                @foreach (var item in Model.superPersonDTO)
                {

                <div class="col s12 m4 l3">
                    <div class="card">
                        <div class="card-image">
                            <img src=@item.image>
                            <span class="card-title">@item.name</span>
                        </div>
                        <div class="card-content">
                            <p><i class="material-icons">person</i> @item.fullname</p>
                            <p><i class="material-icons">wc</i> @item.gender</p>
                            <p><i class="material-icons">streetview</i> @item.publisher</p>
                        </div>
                        <div class="card-action">
                            <i class="material-icons">remove_red_eye</i> @Html.ActionLink("view More", "Details", "Home", routeValues: new
                                                                    {
                                                                        id = item.id,
                                                                    }, htmlAttributes: null)
                            
                        </div>
                    </div>
                </div>   

                }
            </div>
        </div>
    </div>
</div>